#!/bin/bash
script_dir="$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")"
. "$script_dir/lib/oskar.bash"

oskar_dir="$script_dir/../"

[[ -n $oskar_dir ]] || ferr "no source dir given"

cmd=( docker
      run
      -v "$oskar_dir:/oskar"
      -t "$arango_doc_container_default"
      --uid $UID
      --
      "$@"
    )

echo "calling ${cmd[@]}"
"${cmd[@]}"
